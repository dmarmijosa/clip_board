{
  email {$LETSENCRYPT_EMAIL}
}

{$APP_DOMAIN} {
  encode gzip
  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  }

  @api path /api/*
  handle @api {
    reverse_proxy backend:3000
  }

  @socket path /socket.io/*
  handle @socket {
    reverse_proxy backend:3000
  }

  handle {
    reverse_proxy frontend:80
  }
}
